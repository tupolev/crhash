{
  "name": "CRHash",
  "description": "HashIds Hash/Dehash IDs Chrome extension",
  "homepage_url": "https://github.com/tupolev/crhash",
  "version": "0.1.1",
  "manifest_version": 3,
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_title": "Hash/Dehash IDs assistant",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "permissions": [
    "storage"
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description" : "Start the extension"
    }
  }
}
